<%= link_to "Back to all users", admin_user_path %><br/>

<h2><%= @user.full_name %> (<%= link_to "edit", edit_admin_user_path(@user) %>, <%= link_to "delete", admin_user_path(@user), method: :delete, confirm: "Delete user #{@user.full_name}?" %>)</h2>
<h2>Email: <%= @user.email %></h2>
<h3>Created at: <%= formatted_date(@user.created_at) %></h3>
<h3>Updated at: <%= formatted_date(@user.updated_at) %></h3>
<h3>Admin: <%= @user.admin %></h3>
<hr>
